@model IEnumerable<TorneioCS.Models.Competidor>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Idade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalKill)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalPartidas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vitorias)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Idade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalKill)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPartidas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vitorias)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.idCompetidor">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.idCompetidor">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.idCompetidor">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
