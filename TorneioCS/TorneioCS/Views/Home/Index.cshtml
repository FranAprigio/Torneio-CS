@model List<Competidor>

@{
    ViewData["Title"] = "Bem Vindo ao Torneio";
}

<link href="~/css/index.css" rel="stylesheet" />



<div class="container">
    <div>
        <p id="textQtdCom">Escolha 16 Competidores para iniciar o torneio.</p>
        <button type="button" class="btn btn-primary d-none" id="iniciar">
            Iniciar
        </button>
    </div>

    <div class="text-center">

        @foreach (var competidor in Model)
        {
            var comPath = $"../assets/cards/{@competidor.Nome}.png";


            <div class="cardCompetidor" id="@competidor.idCompetidor" style="background-image: url('assets/cards/@(competidor.Nome).png');" data-selectCompetidor onclick="SelecionaCompetidor(@competidor.idCompetidor)">
                <div class="card-body">
                    <div class="headCardCompetidor">
                        <span>@competidor.Nome</span>
                    </div>
                    <div class="dadosCompetidor">
                        Idade: @competidor.Idade
                        <br />
                        Total de Kills: @competidor.TotalKill
                        <br />
                        Total de Partidas: @competidor.TotalPartidas
                        <br />
                        Vitorias: @competidor.Vitorias
                        <br />

                    </div>
                </div>
            </div>
        }



    </div>

</div>


<script src="~/js/site.js" type="text/javascript"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
